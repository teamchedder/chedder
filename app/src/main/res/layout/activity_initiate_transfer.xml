<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.johnotu.apps.cheddermobile.InitiateTransferActivity">
    

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send money to:"
        android:textColor="#7c99d6"
        android:textSize="@dimen/label_text_size"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
       >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank account"
            android:id="@+id/send_to_bank"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile money wallet"
            android:id="@+id/send_to_mobilemoney"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receiving Country"
        android:textSize="@dimen/label_text_size"
        android:paddingTop="@dimen/page_item_padding"
        android:textColor="#7c99d6"
        android:id="@+id/textView2"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/country_spinner"
        android:layout_below="@+id/textView2"
        android:background="@drawable/textfield"
        android:layout_alignParentStart="true"></Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receiving Bank"
        android:textSize="@dimen/label_text_size"
        android:paddingTop="@dimen/page_item_padding"
        android:textColor="#7c99d6"
        android:id="@+id/textView4"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/country_spinner"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bank_spinner"
        android:layout_below="@+id/textView4"
        android:background="@drawable/textfield"
        android:layout_alignParentStart="true"></Spinner>

    <EditText
        android:id="@+id/account_number"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/amount_to_send"
        android:layout_marginTop="13dp"
        android:background="@drawable/textfield"
        android:hint="Acount number"
        android:inputType="number"
        android:paddingTop="@dimen/page_item_padding"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:id="@+id/amount_to_send"
        android:hint="Amount to send"
        android:paddingTop="16dp"
        android:paddingLeft="10dp"
        android:background="@drawable/textfield"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/bank_spinner"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/confirm_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pinkroundedbutton"
        android:text="Confirm"
        android:textColor="#ffffff"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/account_number"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_above="@+id/radioGroup"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:background="#fffafafa"/>

</RelativeLayout>
